{

  "manifest_version": 2,
  "name": "IG Img Download",
  "version": "1.0",
 
  "description": "Download images from IG directly.",

  "icons": {
    "48": "icons/ig-img-download-48.png"
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "downloads",
    "downloads.open"
  ],

  "background": {
    "scripts": ["background.js"]
  }

}